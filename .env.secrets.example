# SMTP settings
CKAN_SMTP_SERVER=CHANGE_ME ##
CKAN_SMTP_USER=CHANGE_ME ##
CKAN_SMTP_PASSWORD=CHANGE_ME ##
CKAN_SMTP_MAIL_FROM=CHANGE_ME ##

# Datapusher
CKAN__DATAPUSHER__API_TOKEN=datapusherapitoken # Currently unused


## RECAPTCHA KEYS
CKAN__RECAPTCHA__PUBLICKEY=CHANGE_ME ##
CKAN__RECAPTCHA__PRIVATEKEY=CHANGE_ME ##

## Mailchimp Settings
CKAN__MAILCHIMP__API_KEY="CHANGE_ME"
# The root url for the API is https://<dc>.api.mailchimp.com/3.0/. 
# The <dc> part of the URL corresponds to the data center for your account. 
# <dc> is the first part of the URL you see in the API keys section of your account
CKAN__MAILCHIMP__BASE_URL="CHANGE_ME"
# at /audience/settings/ look for Audience ID
CKAN__MAILCHIMP__MEMBER_LIST_ID="CHANGE_ME"

## Google Analytics settings
# CKAN__GOOGLE__TAG_ID="CHANGE_ME"
